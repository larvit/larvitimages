<%= _.render('inc/head', obj) %>
<%= _.render('inc/pageTop', obj) %>
<form method="post" enctype="multipart/form-data">

	<%= _.render('inc/adminImageEditControls', obj) %>

	<fieldset>
		<legend>Identity</legend>

		<% if (global.urlParsed.query.uuid) { %>
		<div class="row">
			<img src="/uploaded/images/<%= global.formFields.slug %>?height=200" alt="" />
			<p>Path: /uploaded/images/<%= global.formFields.slug %></p>
		</div>
		<% } %>

		<div class="row">
			<div class="three columns">
				<label for="uuid">Uuid</label>
				<input type="text" value="<%= global.urlParsed.query.uuid %>" disabled="disabled" />
			</div>

			<div class="three columns">
				<label for="image">Image file</label>
				<input type="file" name="image" />
			</div>

			<div class="three columns">
				<label for="slug">Image slug</label>
				<input type="text" name="slug" value="<%= global.formFields.slug %>" placeholder="Autogenerated if not supplied" />
			</div>
		</div>

		<h2>Metadata</h2>

		<% if (global.formFields.metadata_names) { %>
			<% for (let i = 0; global.formFields.metadata_names[i] !== undefined; i ++) { %>
				<div class="row">
					<div class="six columns">
						<input type="text" name="metadata_names[]" value="<%= global.formFields.metadata_names[i] %>" placeholder="Metadata name" />
					</div>
					<div class="six columns">
						<input type="text" name="metadata_data[]" value="<%= global.formFields.metadata_data[i] %>" placeholder="Metadata data" />
					</div>
				</div>
			<% } %>
		<% } %>

		<div class="row">
			<div class="six columns">
				<input type="text" name="metadata_names[]" placeholder="Metadata name" />
			</div>
			<div class="six columns">
				<input type="text" name="metadata_data[]" placeholder="Metadata data" />
			</div>
		</div>
	</fieldset>

	<%= _.render('inc/adminImageEditControls', obj) %>

</form>
<%= _.render('inc/pageBottom', obj) %>
