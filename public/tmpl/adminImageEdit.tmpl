<%= _.render('inc/head', obj) %>
<%= _.render('inc/pageTop', obj) %>
<form method="post" enctype="multipart/form-data">

	<%= _.render('inc/adminImageEditControls', obj) %>

	<fieldset>
		<legend>Identity</legend>

		<% if (global.urlParsed.query.id) { %>
		<div class="row">
			<img src="/uploaded/images/<%= global.formFields.slug %>?height=200" alt="" />
			<p>Path: /uploaded/images/<%= global.formFields.slug %></p>
		</div>
		<% } %>

		<div class="row">
			<div class="three columns">
				<label for="id">Id</label>
				<input type="text" value="<%= global.urlParsed.query.id %>" disabled="disabled" />
			</div>

			<div class="three columns">
				<label for="image">Image file</label>
				<input type="file" name="image" />
			</div>

			<div class="three columns">
				<label for="slug">Image slug</label>
				<input type="text" name="slug" value="<%= global.formFields.slug %>" placeholder="Autogenerated if not supplied" />
			</div>
		</div>
	</fieldset>

	<%= _.render('inc/adminImageEditControls', obj) %>

</form>
<%= _.render('inc/pageBottom', obj) %>
